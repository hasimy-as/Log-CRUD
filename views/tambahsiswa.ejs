<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="icon"
      type="image/png"
      href="img/Universal/logo-ts.png"
      sizes="96x96"
    />
    <title>Tambah Siswa | Tata Tertib Siswa</title>
  </head>

  <body>
    <%- include ("assets/navbar.ejs") %>

    <div class="container">
      <form class="ui form" method="POST" action="authSiswa">
        <br />

        <h2 class="ui header text-center">Penambahan Data Siswa</h2>

        <p class="ui dividing header"></p>
        <br />
        <div class="two fields">
          <div class="field">
            <label for="nis">NIS</label>
            <input type="text" name="nis" placeholder="NIS" required />

            <div class="field">
              <br />
              <label for="nama">Nama Siswa</label>
              <input
                type="text"
                name="nama"
                placeholder="Nama Siswa"
                required
              />
            </div>
          </div>
        </div>
        <div class="five fields">
          <div class="field">
            <label for="kelas">Kelas</label>
            <input type="text" name="kelas" required />
          </div>
        </div>
        <input type="hidden" name="langgar" value="T" />
        <br />
        <a class="ui blue button" href="/input">Kembali</a>
        <input
          class="ui green button"
          type="submit"
          tabindex="0"
          value="Tambahkan"
        />
      </form>
      <br />
    </div>
  </body>
</html>
